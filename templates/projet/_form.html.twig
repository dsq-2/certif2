
<div class="container">
	<div class="card border-light mt-5 shadow-sm p-3" >
		{{ form_start(form) }}
		<div class="card-header">
			<h1 class="mt-5 mb-5">Quel projet souhaiterez vous realiser ?</h1>
		</div>
		<div class="card-body">
				
			<p class="card-text mt-3">Décrivez en quelques lignes vos travaux à réaliser et entrez en contact avec des artisans qualifiés près de chez vous.</p>
				<div class="row ">
					<div class="col mt-3 m-0 p-0">
						{{form_row(form.codePostal)}}
						{{form_errors(form)}}
					</div>
					<div class="col mt-3 ms-2 p-0">
						{{form_row(form.ville)}}
						{{form_errors(form)}}
					</div>	
				</div>
		</div>
					<div class="form-group mt-3">
						{{form_row(form.titre)}}
						{{form_errors(form)}}
					</div>	
					<div class="form-group mt-3">	
						{{form_row(form.description)}}
						{{form_errors(form)}}
					</div>
					<div class="mt-3">
						<button class="btn btn-primary">{{ button_label|default('Save') }}</button>
					</div>
	</div>
	{{form_end(form)}}
</div>
